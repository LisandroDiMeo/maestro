<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level - %cyan(%msg%n)</pattern>
        </encoder>
        <filter class="maestro.debuglog.TestGenerationFilter" />
    </appender>

    <root level="debug">
        <appender-ref ref="console" />
    </root>


</configuration>
